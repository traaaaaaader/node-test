{
	"compilerOptions": {
		"module": "NodeNext",
		"baseUrl": "src",
		"outDir": "dist",
		"sourceMap": true,
		"noImplicitAny": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"]
}
